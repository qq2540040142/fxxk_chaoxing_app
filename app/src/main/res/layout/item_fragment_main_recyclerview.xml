<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/background_recyclerview">
    <ImageView
        android:id="@+id/item_Main_Recyclerview_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/item_Main_Recyclerview_text_subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="考古发现与探索"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_Main_Recyclerview_image"
        />
    <TextView
        android:id="@+id/item_Main_Recyclerview_text_teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高蒙蒙"
        android:textSize="11sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_Main_Recyclerview_text_subjectName"
        app:layout_constraintLeft_toRightOf="@+id/item_Main_Recyclerview_image"
        />
    <TextView
        android:id="@+id/item_Main_Recyclerview_text_schoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京大学"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_Main_Recyclerview_image"
        />
</androidx.constraintlayout.widget.ConstraintLayout>