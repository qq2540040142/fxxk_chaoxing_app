<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/fragment_login_nameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:hint="学习通账号"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/fragment_login_edittext_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/fragment_login_passWordfEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:hint="密码"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/fragment_login_edittext_background"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_nameEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"/>
    <CheckBox
        android:id="@+id/fragment_login_savePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="@color/faceLoginColor"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_passWordfEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        />
    <ImageView
        android:id="@+id/fragment_login_loginButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="40dp"
        android:src="@drawable/fragment_login_loging_button"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_passWordfEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>